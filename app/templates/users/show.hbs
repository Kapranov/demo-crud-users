<div class="user-profile pane scaleout flipin">
  <div>
    <strong>{{model.name}}</strong>
  </div>
  <br>
  <div>
    <img class="img-circle" src={{model.avatarUrl}} alt="avatar"/>
  </div>
  <br>
  <div>
    <strong>E-Mail:</strong> {{model.email}}
  </div>
  <div>
    <strong><i class="fa fa-dollar">:</i></strong> {{model.spent}}
  </div>
  <div>
    <strong>Bio:</strong> {{model.bio}}
  </div>
  <div>
    <strong>Updated:</strong> {{moment-format model.updatedAt 'MMM D, YYYY h:mm:ss A'}}
  </div>
  <div>
    <strong>Created :</strong> {{moment-format model.createdAt 'MMM D, YYYY h:mm:ss A'}}
  </div>
  <div>
    <strong>CreatedMonth :</strong> {{format-date createdAt=updated}}
  </div>
  <br>
  <div>
    {{#link-to 'users.edit'  model class="btn btn-success btn-xs btn-show"}}Edit{{/link-to}}
    {{#link-to 'users.index' tagName="button" class="btn btn-info btn-xs btn-show"}}Back{{/link-to}}
    <button class="btn btn-danger btn-xs btn-show" {{action 'deleteUser' model}}>Destroy</button>
  </div>
</div>
