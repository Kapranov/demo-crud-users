<section>
  {{#link-to 'posts.new' tagName="button" class="button primary medium active"}}Add a New Post{{/link-to}}
  {{#each model as |post|}}
  <div>
    <span>{{post.publishedDate}}</span> |
    <span>{{#link-to 'post' post}}{{post.id}}{{/link-to}}</span> |
    <span>{{post.title}}</span> |
    <span>{{post.body}}</span> |
    <span>{{moment-format post.published 'MMM D, YYYY h:mm:ss A'}}</span> |
    <span><button class="btn btn-danger remove" {{action 'deletePost' post}}><span class="fa fa-minus"></span> Remove</button></span>
  </div>
  {{/each}}
</section>

<br/>
<ul class="posts">
  {{#each model as |post|}}
    {{fire-post-slug post=post}}
  {{/each}}
</ul>
