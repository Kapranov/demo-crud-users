<div class="top-bar text-center">
  <h2 id="title">
    Context Menu Component
  </h2>
</div>

{{outlet}}

{{context-menu menuItemTemplate="menu-item"}}

<div class="">
  <table class="table table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>Education</th>
        <th>Work City</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |menu-context|}}
        {{#right-click menuActions=menuActions model=menu-context tagName="tr"}}
          <td>{{menu-context.name}}</td>
          <td>{{menu-context.city}}</td>
          <td>{{menu-context.education}}</td>
          <td>{{menu-context.work}}</td>
        {{/right-click}}
      {{/each}}
    </tbody>
  </table>
</div>
